/* Start with Amoled Cord Base Styles */
@import url("https://luckfire.github.io/amoled-cord/src/amoled-cord.css");

@import url("https://nyri4.github.io/LilyPichu/main.css");

/* --- User-defined variables --- */
:root {
    /* Custom Background */
    --background-tertiary-alt: url("https://i.pinimg.com/736x/c8/34/e1/c834e1f4e6231c7f15dbd1295dbdb189.jpg");

    /* Border-radius for elements */
    --border-radius: 20px;

    /* Transparency levels */
    --transparency-level: rgba(0, 0, 0, 0.7); /* Adjust for inner transparency effect */
}

/* Apply custom background image to the entire body */
body {
    background: var(--background-tertiary-alt) no-repeat center center fixed;
    background-size: cover;
    margin: 0;
    padding: 0;
}

/* Inner transparency for content boxes (like in HuaTao theme) */
.container,
.header,
.card {
    background-color: var(--transparency-level);
    border-radius: var(--border-radius);
    backdrop-filter: blur(10px); /* Frosted glass effect */
    border: 1px solid rgba(255, 255, 255, 0.1); /* Light border */
}

/* Additional hover effect on cards for subtle interactivity */
.card:hover {
    border-color: rgba(255, 255, 255, 0.3); /* Brighter border on hover */
}

/* Buttons with transparency and border-radius */
button {
    background-color: var(--transparency-level);
    color: #fff;
    border-radius: var(--border-radius);
    border: 1px solid rgba(255, 255, 255, 0.2);
    padding: 10px 20px;
}

button:hover {
    background-color: rgba(255, 255, 255, 0.2);
}

/* Footer styling with transparency and border-radius */
.footer {
    background-color: var(--transparency-level);
    border-radius: var(--border-radius);
    padding: 10px;
    text-align: center;
}

/* Additional tweaks for links */
a:hover {
    color: #ff5722; /* Change hover color for links */
}

/* Inner elements should have transparency, like cards, modals, etc. */
.card, .container, .header, .footer {
    background-color: var(--transparency-level);
    border-radius: var(--border-radius);
    backdrop-filter: blur(10px);
}
